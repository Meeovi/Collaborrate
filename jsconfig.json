{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "target": "es6",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
